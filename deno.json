{
  "tasks": {
    "start": "deno run --allow-all main.ts",
    "manager":"deno run --allow-all manager.ts",
    "test": "deno test --allow-all src/"
  },
  "fmt": {
    "include": [
      "src/",
      "tests/",
      "data/",
      "*.ts",
      "*.json"
    ],
    "exclude": [
      "coverage/"
    ],
    "singleQuote": true,
    "lineWidth": 120
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "examples/",
      "*.ts"
    ]
  }
}
